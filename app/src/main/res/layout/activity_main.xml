<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/solution_tv"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="25dp"
        android:hint="enter math problem"
        android:layout_marginBottom="25dp"
        android:textAlignment="textStart"
        android:textSize="40sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:background="#99FFCC"
        android:id="@+id/buttons_layout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                style="@style/Widget.MaterialComponents.Button"
                android:textSize="32sp"
                android:id="@+id/button_c"
                android:layout_margin="12dp"
                android:backgroundTint="#FF0000"
                android:textColor="#FFFFFF"
                android:text="C" />
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                style="@style/Widget.MaterialComponents.Button"
                android:textSize="32sp"
                android:id="@+id/button_open_bracket"
                android:layout_margin="12dp"
                android:textColor="@color/white"
                android:backgroundTint="#6600"
                android:text="(" />
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                style="@style/Widget.MaterialComponents.Button"
                android:textSize="32sp"
                android:id="@+id/button_close_bracket"
                android:layout_margin="12dp"
                android:textColor="@color/white"
                android:backgroundTint="#6600"
                android:text=")" />
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                style="@style/Widget.MaterialComponents.Button"
                android:textSize="32sp"
                android:id="@+id/button_divide"
                android:layout_margin="12dp"
                android:textColor="@color/white"
                android:backgroundTint="#FF6600"
                android:text="/" />



    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                style="@style/Widget.MaterialComponents.Button"
                android:textSize="32sp"
                android:id="@+id/button_7"
                android:layout_margin="12dp"
                android:textColor="@color/white"
                android:text="7" />
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                style="@style/Widget.MaterialComponents.Button"
                android:textSize="32sp"
                android:id="@+id/button_8"
                android:layout_margin="12dp"
                android:textColor="@color/white"
                android:text="8" />
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                style="@style/Widget.MaterialComponents.Button"
                android:textSize="32sp"
                android:id="@+id/button_9"
                android:layout_margin="12dp"
                android:textColor="@color/white"
                android:text="9" />
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                style="@style/Widget.MaterialComponents.Button"
                android:textSize="32sp"
                android:id="@+id/button_plus"
                android:layout_margin="12dp"
                android:textColor="@color/white"
                android:backgroundTint="#FF6600"
                android:text="+" />



        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                style="@style/Widget.MaterialComponents.Button"
                android:textSize="32sp"
                android:id="@+id/button_4"
                android:layout_margin="12dp"
                android:textColor="@color/white"
                android:text="4" />
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                style="@style/Widget.MaterialComponents.Button"
                android:textSize="32sp"
                android:id="@+id/button_5"
                android:layout_margin="12dp"
                android:textColor="@color/white"
                android:text="5" />
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                style="@style/Widget.MaterialComponents.Button"
                android:textSize="32sp"
                android:id="@+id/button_6"
                android:layout_margin="12dp"
                android:textColor="@color/white"
                android:text="6" />
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                style="@style/Widget.MaterialComponents.Button"
                android:textSize="32sp"
                android:id="@+id/button_multiply"
                android:layout_margin="12dp"
                android:textColor="@color/white"
                android:backgroundTint="#FF6600"
                android:text="*" />



        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                style="@style/Widget.MaterialComponents.Button"
                android:textSize="32sp"
                android:id="@+id/button_1"
                android:layout_margin="12dp"
                android:textColor="@color/white"
                android:text="1" />
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                style="@style/Widget.MaterialComponents.Button"
                android:textSize="32sp"
                android:id="@+id/button_2"
                android:layout_margin="12dp"
                android:textColor="@color/white"
                android:text="2" />
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                style="@style/Widget.MaterialComponents.Button"
                android:textSize="32sp"
                android:id="@+id/button_3"
                android:layout_margin="12dp"
                android:textColor="@color/white"
                android:text="3" />
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                style="@style/Widget.MaterialComponents.Button"
                android:textSize="32sp"
                android:id="@+id/button_minus"
                android:layout_margin="12dp"
                android:textColor="@color/white"
                android:backgroundTint="#FF6600"
                android:text="-" />



        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                style="@style/Widget.MaterialComponents.Button"
                android:textSize="20sp"
                android:id="@+id/button_ac"
                android:layout_margin="12dp"
                android:textColor="@color/white"
                android:text="00" />
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                style="@style/Widget.MaterialComponents.Button"
                android:textSize="32sp"
                android:id="@+id/button_0"
                android:layout_margin="12dp"
                android:textColor="@color/white"
                android:text="0" />
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                style="@style/Widget.MaterialComponents.Button"
                android:textSize="32sp"
                android:id="@+id/button_dot"
                android:layout_margin="12dp"
                android:textColor="@color/white"
                android:backgroundTint="#FF6600"
                android:text="." />
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                style="@style/Widget.MaterialComponents.Button"
                android:textSize="32sp"
                android:id="@+id/button_equals"
                android:layout_margin="12dp"
                android:textColor="@color/white"
                android:backgroundTint="#009900"
                android:text="=" />



        </LinearLayout>


    </LinearLayout>




</RelativeLayout>